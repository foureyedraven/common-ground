<div class="row custom">
  <div class="banner">
    <h1>At-Home Teaching Methods and Advice</h1>
    <h3>Explore ways to help your student succeed in school and in their creative hobbies</h3>
  </div>
</div>
<div class="row custom">
        <%= form_tag(search_path, method: :get) do %>
        <%= text_field_tag 'query', '', placeholder: 'Search' %>
        <% end %>
  <ul class="posts">
    <% @posts.each do |post| %>
      <li>
        <%= render post %>
      </li>
    <% end %>
  </ul>
</div>